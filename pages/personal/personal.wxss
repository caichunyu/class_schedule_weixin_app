/* pages/personal/personal.wxss */
.column-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.first-userinfo {
  display: flex;
  flex-direction: row;
  background-color: #138bec;
  justify-content: space-between;
  align-items: center;
  height: 5rem;
}
.order-vips {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  /*background-color: #ffcccc;*/
  height: 5rem;
}

.personal-main {
  background-color: #eaeaea;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  justify-content:center;
  color: #eaeaea;
  align-items: center;
}
